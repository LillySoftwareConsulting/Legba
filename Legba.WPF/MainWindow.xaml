<Window x:Class="Legba.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Legba.Engine.ViewModels;assembly=Legba.Engine"
        xmlns:conv="clr-namespace:Legba.WPF.CustomConverters"
        xmlns:local="clr-namespace:Legba.WPF"
        d:DataContext="{d:DesignInstance viewModels:ChatViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Legba" 
        FontSize="12pt"
        WindowState="Maximized">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:BooleanToBrushConverter x:Key="BooleanToBrushConverter" />
        <conv:BooleanToHorizontalAlignmentConverter x:Key="BooleanToHorizontalAlignmentConverter" />
        <conv:RelativeWidthConverter x:Key="RelativeWidthConverter" />
        <conv:StringNotEmptyToBooleanConverter x:Key="StringNotEmptyToBooleanConverter"/>

        <Style x:Key="NoIconMenuItemStyle" TargetType="{x:Type MenuItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <!-- The ColumnDefinitions here have been modified to remove the icon column -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="HeaderHost" ContentSource="Header" Margin="10,2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Add triggers for mouse over, pressed, etc. as needed -->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="#AEDFF7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="100"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*" MinWidth="100"/>
        </Grid.ColumnDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0" Grid.Column="0"
              FontSize="12pt"
              Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="New Session">
                    <MenuItem.ItemsSource>
                        <Binding Path="Llms" />
                    </MenuItem.ItemsSource>
                    <MenuItem.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Models}">
                            <TextBlock Text="{Binding Name}" />
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <MenuItem Header="{Binding Name}" 
                                              Command="{Binding DataContext.SelectModelCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}" 
                                              CommandParameter="{Binding}" />
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit"
                          Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"
                          IsEnabled="False"/>
            </MenuItem>
        </Menu>

        <!-- Outputs -->
        <TabControl Grid.Row="1" Grid.Column="0" 
                    Visibility="{Binding HasChatSession, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="5,5,5,5">

            <!-- Messages -->
            <TabItem Header="Chat">
                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ListBox Grid.Row="0" Grid.Column="0"
                             x:Name="messages"
                             Background="#F4F6F6"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ItemsSource="{Binding ChatSession.Messages}">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy to Clipboard"
                                          Style="{StaticResource NoIconMenuItemStyle}"
                                          Click="MenuItemCopyToClipboard_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding IsSentByUser, Converter={StaticResource BooleanToBrushConverter}}"
                                        CornerRadius="3"
                                        Margin="3"
                                        HorizontalAlignment="{Binding IsSentByUser, Converter={StaticResource BooleanToHorizontalAlignmentConverter}}">
                                    <Border.MaxWidth>
                                        <MultiBinding Converter="{StaticResource RelativeWidthConverter}">
                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ListBox}}" />
                                            <Binding Source="0.7" />
                                            <!-- 70% width -->
                                        </MultiBinding>
                                    </Border.MaxWidth>
                                    <TextBlock Text="{Binding Content}" 
                                               TextWrapping="Wrap"
                                               Padding="5"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </TabItem>

            <!-- Statistics -->
            <TabItem Header="Statistics">
                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid Grid.Row="0" Grid.Column="0"
                              Grid.ColumnSpan="2"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              ItemsSource="{Binding ChatSession.TokenSummaries}">
                    </DataGrid>

                    <StackPanel Grid.Row="2" Grid.Column="0"
                                Orientation="Horizontal">
                        <Label Content="Grand Totals"
                               FontWeight="Bold"/>
                        <Label Content="Prompt tokens:"/>
                        <Label Content="{Binding ChatSession.GrandTotalRequestTokenCount}"/>
                        <Label Content="Completion tokens:"/>
                        <Label Content="{Binding ChatSession.GrandTotalResponseTokenCount}"/>
                        <Label Content="All tokens:"/>
                        <Label Content="{Binding ChatSession.GrandTotalTokenCount}"/>
                    </StackPanel>

                </Grid>
            </TabItem>

        </TabControl>

        <!-- Grid splitter -->
        <GridSplitter Grid.Row="0" Grid.Column="1"
                      Grid.RowSpan="2"
                      Width="5"
                      HorizontalAlignment="Stretch"/>

        <!-- Inputs -->
        <Grid Grid.Row="1" Grid.Column="2"
              Visibility="{Binding HasChatSession, Converter={StaticResource BooleanToVisibilityConverter}}"
              Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Persona -->
            <Label Grid.Row="0" Grid.Column="0"
                   FontWeight="Bold"
                   Content="Persona"/>
            <Button Grid.Row="0" Grid.Column="1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontWeight="Bold"
                    Height="20"
                    Width="20">
                <Image Source="Icons/MagnifyingGlass.png" />
                <ToolTipService.InitialShowDelay>200</ToolTipService.InitialShowDelay>
                <Button.ToolTip>
                    <ToolTip>Select or manage personas</ToolTip>
                </Button.ToolTip>
            </Button>
            <TextBox Grid.Row="1" Grid.Column="0"
                     Grid.ColumnSpan="2"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Background="LightGray"
                     VerticalScrollBarVisibility="Auto"
                     Text="{Binding ChatSession.Persona.Description, Mode=TwoWay}"/>

            <!-- Purpose -->
            <Label Grid.Row="2" Grid.Column="0"
                   FontWeight="Bold"
                   Content="Purpose"/>
            <Button Grid.Row="2" Grid.Column="1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontWeight="Bold"
                    Height="20"
                    Width="20">
                <Image Source="Icons/MagnifyingGlass.png" />
                <ToolTipService.InitialShowDelay>200</ToolTipService.InitialShowDelay>
                <Button.ToolTip>
                    <ToolTip>Select or manage purposes</ToolTip>
                </Button.ToolTip>
            </Button>
            <TextBox Grid.Row="3" Grid.Column="0"
                     Grid.ColumnSpan="2"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Background="LightGray"
                     VerticalScrollBarVisibility="Auto"
                     Text="{Binding ChatSession.Purpose.Description, Mode=TwoWay}"/>

            <!-- Persuasion -->
            <Label Grid.Row="4" Grid.Column="0"
                   FontWeight="Bold"
                   Content="Persuasion"/>
            <Button Grid.Row="4" Grid.Column="1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontWeight="Bold"
                    Height="20"
                    Width="20">
                <Image Source="Icons/MagnifyingGlass.png" />
                <ToolTipService.InitialShowDelay>200</ToolTipService.InitialShowDelay>
                <Button.ToolTip>
                    <ToolTip>Select or manage persuasion</ToolTip>
                </Button.ToolTip>
            </Button>
            <TextBox Grid.Row="5" Grid.Column="0"
                     Grid.ColumnSpan="2"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Background="LightGray"
                     VerticalScrollBarVisibility="Auto"
                     Text="{Binding ChatSession.Persuasion.Description, Mode=TwoWay}"/>

            <!-- Process -->
            <Label Grid.Row="6" Grid.Column="0"
                   FontWeight="Bold"
                   Content="Process"/>
            <Button Grid.Row="6" Grid.Column="1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontWeight="Bold"
                    Height="20"
                    Width="20">
                <Image Source="Icons/MagnifyingGlass.png" />
                <ToolTipService.InitialShowDelay>200</ToolTipService.InitialShowDelay>
                <Button.ToolTip>
                    <ToolTip>Select or manage processes</ToolTip>
                </Button.ToolTip>
            </Button>
            <TextBox Grid.Row="7" Grid.Column="0"
                     Grid.ColumnSpan="2"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Background="LightGray"
                     VerticalScrollBarVisibility="Auto"
                     Text="{Binding ChatSession.Process.Description, Mode=TwoWay}"/>

            <!-- Prompt -->
            <Label Grid.Row="8" Grid.Column="0"
                   FontWeight="Bold"
                   Content="Prompt"/>
            <TextBox Grid.Row="9" Grid.Column="0"
                     Grid.ColumnSpan="2"
                     x:Name="prompt"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Background="LightGray"
                     VerticalScrollBarVisibility="Auto"
                     Text="{Binding ChatSession.Prompt, Mode=TwoWay}"/>

            <Button Grid.Row="11" Grid.Column="1"
                    Content="Ask"
                    Width="75"
                    HorizontalAlignment="Right"
                    IsEnabled="{Binding ElementName=prompt, Path=Text, Converter={StaticResource StringNotEmptyToBooleanConverter}}"
                    Command="{Binding AskCommand, AsyncState=True}"/>
        </Grid>

    </Grid>

</Window>