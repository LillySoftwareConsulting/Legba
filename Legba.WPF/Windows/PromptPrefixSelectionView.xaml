<Window x:Class="Legba.WPF.Windows.PromptPrefixSelectionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Legba.WPF.Windows"
        xmlns:controls="clr-namespace:Legba.WPF.CustomControls"
        mc:Ignorable="d"
        Title="Select Prompt Prefix Data" 
        Style="{StaticResource WindowStyle}"
        WindowStartupLocation="CenterOwner"
        Height="800" Width="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 2x2 Grid for Prompt Prefixes -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Persona -->
            <GroupBox Header="Persona" Grid.Row="0" Grid.Column="0" Margin="5">
                <controls:PromptPrefixSection ViewModel="{Binding PersonaViewModel}"
                                              ManageClicked="ManagePersonas_Click"
                                              AddUpdateClicked="AddUpdatePersonaText_Click"
                                              ClearClicked="ClearPersonaText_Click" />
            </GroupBox>

            <!-- Purpose -->
            <GroupBox Header="Purpose" Grid.Row="0" Grid.Column="1" Margin="5">
                <controls:PromptPrefixSection ViewModel="{Binding PurposeViewModel}"
                                              ManageClicked="ManagePurposes_Click"
                                              AddUpdateClicked="AddUpdatePurposeText_Click"
                                              ClearClicked="ClearPurposeText_Click" />
            </GroupBox>

            <!-- Persuasion -->
            <GroupBox Header="Persuasion" Grid.Row="1" Grid.Column="0" Margin="5">
                <controls:PromptPrefixSection ViewModel="{Binding PersuasionViewModel}"
                                              ManageClicked="ManagePersuasions_Click"
                                              AddUpdateClicked="AddUpdatePersuasionText_Click"
                                              ClearClicked="ClearPersuasionText_Click" />

            </GroupBox>

            <!-- Process -->
            <GroupBox Header="Process" Grid.Row="1" Grid.Column="1" Margin="5">
                <controls:PromptPrefixSection ViewModel="{Binding ProcessViewModel}"
                                              ManageClicked="ManageProcesses_Click"
                                              AddUpdateClicked="AddUpdateProcessText_Click"
                                              ClearClicked="ClearProcessText_Click" />

            </GroupBox>
        </Grid>

        <!-- Load Buttons -->
        <Menu Grid.Row="1" FontSize="14">
            <MenuItem Header="Load Source Code Files">
                <MenuItem Header="From Solution"
                          Command="{Binding LoadFromSolutionCommand}"/>
                <MenuItem Header="From Project"
                          Command="{Binding LoadFromProjectCommand}"/>
                <MenuItem Header="From Folder(s)"
                          Command="{Binding LoadFromFoldersCommand}"/>
                <MenuItem Header="From File(s)"
                          Command="{Binding LoadFromFilesCommand}"/>
            </MenuItem>
        </Menu>

        <!-- File List -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding LoadedFileNames}"
                 IsHitTestVisible="False"
                 Margin="0,0,0,10"
                 BorderBrush="Gray"
                 BorderThickness="1"
                 Background="White"/>

        <!-- Continue button -->
        <Button Grid.Row="3"
                Content="Continue"
                HorizontalAlignment="Right"
                Width="100"
                Click="Continue_Click"/>

    </Grid>

</Window>
