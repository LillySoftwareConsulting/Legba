<UserControl x:Class="Legba.WPF.CustomControls.PromptPrefixSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Legba.WPF.CustomControls"
             x:Name="Root">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Right"
                Style="{StaticResource PromptPrefixSectionButton}"
                Click="Manage_Click">
            <Image Source="/Images/MagnifyingGlass.png" />
            <Button.ToolTip>
                <ToolTip>Select or manage prefixes</ToolTip>
            </Button.ToolTip>
        </Button>
        <Button Grid.Row="0" Grid.Column="1"
                ToolTipService.ShowOnDisabled="True"
                Style="{StaticResource PromptPrefixSectionAddUpdateButton}"
                IsEnabled="{Binding ViewModel.Text, Converter={StaticResource StringNotEmptyToBooleanConverter}}"
                Click="AddUpdate_Click">
            <Image Source="/Images/PlusCircle.png" />
        </Button>
        <Button Grid.Row="0" Grid.Column="2"
                Style="{StaticResource PromptPrefixSectionClearButton}"
                IsEnabled="{Binding ViewModel.Text, Converter={StaticResource StringNotEmptyToBooleanConverter}}"
                Click="Clear_Click">
            <Image Source="/Images/ClearIcon.png" />
        </Button>
        
        <TextBox Grid.Row="1" Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Margin="0,5,0,0"
                 Style="{StaticResource PromptInputTextBox}"
                 Text="{Binding ViewModel.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
    
</UserControl>